generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  updates    Update[]
  userRoles  UserRole[]
  auditLogs  AuditLog[]
  performedAudits AuditLog[] @relation("PerformedBy")

  @@map("users")
}

model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  userRoles       UserRole[]
  rolePermissions RolePermission[]
  
  @@map("roles")
}

model Permission {
  id          String   @id @default(cuid())
  resource    String
  action      Action
  description String?
  createdAt   DateTime @default(now())
  
  // Relations
  rolePermissions RolePermission[]
  
  @@unique([resource, action])
  @@index([resource])
  @@index([action])
  @@map("permissions")
}

model UserRole {
  userId    String
  roleId    String
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  
  @@id([userId, roleId])
  @@map("user_roles")
}

model RolePermission {
  roleId       String
  permissionId String
  createdAt    DateTime @default(now())
  
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  
  @@id([roleId, permissionId])
  @@map("role_permissions")
}

model Update {
  id          String      @id @default(cuid())
  title       String
  description String      // Short summary/preview text
  content     String?     // Full content/body (optional)
  type        UpdateType
  status      UpdateStatus @default(DRAFT)
  linkHref    String?     // Link destination (for CTAs)
  linkText    String?     // Link text (for CTAs)
  imageUrl    String?     // Optional featured image
  
  // Feature flags
  featured    Boolean     @default(false) // Show on homepage/featured sections
  
  // Type-specific fields
  eventDate   DateTime?   // For EVENT type: when the event occurs
  expiresAt   DateTime?   // For ANNOUNCEMENT type: when to stop showing
  tags        String[]    @default([]) // For categorization/filtering
  
  // Metadata
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  publishedAt DateTime?   // When it was published (can be scheduled)
  
  // Relations
  authorId    String
  author      User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  // Indexes for performance
  @@index([type])
  @@index([status])
  @@index([publishedAt])
  @@index([createdAt])
  @@index([featured])
  @@index([eventDate])
  @@index([expiresAt])
  @@map("updates")
}

enum UpdateType {
  CASE_STUDY
  DISCUSSION
  EVENT
  NEWS
  ANNOUNCEMENT
}

enum UpdateStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

enum Action {
  CREATE
  READ
  UPDATE
  DELETE
}

model AuditLog {
  id         String   @id @default(cuid())
  action     String   // e.g., "USER_CREATED", "INVITATION_SENT", "ROLE_CHANGED"
  entityType String   // e.g., "User", "Role", "Permission"
  entityId   String?  // ID of the affected entity
  metadata   Json?    // Additional context (email, role name, etc.)
  ipAddress  String?  // IP address of the actor
  createdAt  DateTime @default(now())
  
  // Relations
  userId        String?  // User affected by the action
  performedById String   // Admin who performed the action
  
  user        User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  performedBy User  @relation("PerformedBy", fields: [performedById], references: [id], onDelete: Cascade)
  
  // Indexes for performance
  @@index([action])
  @@index([entityType])
  @@index([userId])
  @@index([performedById])
  @@index([createdAt])
  @@map("audit_logs")
}